<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/har"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/white"
                android:src="@drawable/ic_logo" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="132dp"
                    android:layout_weight="@integer/complicationDrawable_borderStyle"
                    android:fontFamily="sans-serif-thin"
                    android:text="Activity"
                    android:textAlignment="0"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/standing_row"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="0dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Jumping"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/standing_prob"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/walking_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Standing"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/walking_prob"

                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>


            <TableRow
                android:id="@+id/jumping_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Walking"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/jumping_prob"
                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/falling_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <TextView
                    android:layout_weight="1"
                    android:text="Falling"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/falling_prob"

                    android:layout_width="119dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/har"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:id="@+id/Stat">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"/>

            <TextView
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Stat"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:id="@+id/hr">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/Save"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bh" />

            <TextView
                android:id="@+id/heart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="- -"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr"
            android:layout_centerInParent="true"
            android:text="Measuring..."
            android:textColor="@color/light_grey"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/measure"
            android:text="© 2022 • OSCA"
            android:textSize="11sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_grey"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp" />

    </RelativeLayout>


</ScrollView>