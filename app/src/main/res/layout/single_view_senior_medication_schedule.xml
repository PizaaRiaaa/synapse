<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".screen.carer.modules.Medication">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/search_view_stroke"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivShapeOfPill"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:src="@drawable/ic_medications"/>

            <TextView
                android:id="@+id/tvNameOfPill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of medicine"
                android:layout_margin="10dp"
                android:fontFamily="@font/redhat_display_medium"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tvDoseOfPill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dose times today"
                android:layout_margin="10dp"
                android:fontFamily="@font/redhat_display_medium"
                android:textColor="@color/et_stroke"
                android:textAlignment="center"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>